<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] An An</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header id="TopNavBar">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light navDark" id="NavBar">
            <div class="container" >
                <a class="navbar-brand" asp-area=""  asp-controller="Home" asp-action="Index" id = "Logo1"><img id="AnAnLogo" src="~/Images/Group.png" alt="An An" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span> 
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse ">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="navDarkText" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="navDarkText" asp-area="" asp-controller="Home" asp-action="AboutUs">Về chúng tôi</a>
                        </li>
                           <li class="nav-item">
                            <a class="navDarkText" asp-area="" asp-controller="Home" asp-action="Menu">Thực đơn</a>
                        </li>
                           <li class="nav-item">
                            <a class="navDarkText" asp-area="" asp-controller="Home" asp-action="News">Sự Kiện</a>
                        </li>
                             <li class="nav-item">
                            <a class="navDarkText" asp-area="" asp-controller="Home" asp-action="Reservation">Đặt bàn</a>
                        </li>
                             <li class="nav-item">
                            <a class="navDarkText" asp-area="" asp-controller="Home" asp-action="Contact">Liên hệ</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container fill" >
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

 
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
